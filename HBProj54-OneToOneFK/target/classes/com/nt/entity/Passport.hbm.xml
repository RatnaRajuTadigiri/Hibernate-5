<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class  name="com.nt.entity.Passport"  table="AM_OTOFK_PASSPORT">
       <id name="passportNo">
          <generator class="sequence">
              <param name="sequence_name">pspt_seq</param>
              <param name="initial_value">1000</param>
              <param name="increment_size">1</param>
          </generator>
       </id>
       <property name="country"  length="20"/>
       <property name="expiryDate"  />
       <many-to-one name="personDetails" class="com.nt.entity.Person"
                                                                            column="PERSON_ID"
                                                                            not-null ="true"
                                                                            unique="true"
                                                                            cascade="all"
                                                                            lazy="proxy"/>
    </class>    
</hibernate-mapping>